@using MobilePhonesWebsite.Repository
@using MobilePhonesWebsite.Models
@model MobilePhonesWebsite.ViewModels.PhoneCaseVM.DisplayPhoneCaseVM
@{
    ViewBag.Title = "Phone case List";
    Layout = "/Views/Shared/_Layout.cshtml";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>
<body>
    <h1 class="header" style="margin-top:5%; margin-left:7%">Калъфи</h1>
    <br />
    <div class="col-3 text-right">
        <a id="create" class="btn btn-primary w-75" asp-controller="Admin" asp-action="CreatePhoneCase" style="margin-bottom: 8%">Добави нов</a>
    </div>
    <div class="table-responsive" style="margin-bottom:5%">
        <table class="timetable_sub">
            <tr>
                <th>Марка</th>
                <th>За</th>
                <th>Цена</th>
                <th>Добавен на</th>
                <th>Действия</th>
            </tr>

            @foreach (var item in Model.PhoneCases)
            {
                <tr>
                    <td>
                        @item.Brand
                    </td>

                    <td>
                        @item.FitFor
                    </td>

                    <td>
                        @item.Price
                    </td>

                    <td>
                        @item.DateAdded
                    </td>
                    <td>
                        <a class="btn btn-success m-1" asp-controller="Admin" asp-action="UpdatePhoneCase" asp-route-id="@item.Id"> Промени </a>
                        <a class="btn btn-danger m-1" asp-controller="Admin" asp-action="DeletePhoneCase" asp-route-id="@item.Id" onclick="return confirm('Наистина ли искате да мреханете този продукт?')"> Изтрий </a>
                    </td>
                </tr>
            }
        </table>
    </div>
</body>
</html>