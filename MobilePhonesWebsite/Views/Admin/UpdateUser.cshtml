@model MobilePhonesWebsite.ViewModels.UserVM.EditUserVM
@{
    ViewBag.Title = "Update user";
    Layout = "/Views/Shared/_Layout.cshtml";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Form Validation</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/css/admin/CreateEditForm.css">
</head>
<body>
    <div class="column-form" style="margin-top:3%">
        <h1 style="margin-bottom:3%">Промени потребител</h1>
        <form id="Form" class="Form" asp-action="UpdateUser" asp-controller="Admin" method="post">
            <input asp-for="Id" value="@Model.Id" type="hidden" />
            <div class="row">
                <input type="hidden" id="isFirstNameValid" value="" />
                <input type="hidden" id="isLastNameValid" value="" />
                <input type="hidden" id="isEmailValid" value="" />
                <input type="hidden" id="isPasswordValid" value="" />

                <div class="column">
                    <div class="Form-group input-control">
                        <label for="Username">Име</label>
                        <input asp-for="Username" value="@Model.Username" />
                        <div class="error"></div>
                    </div>
                </div>
                <div class="column">
                    <div class="Form-group input-control">
                        <label for="Email">Имейл</label>
                        <input asp-for="Email" value="@Model.Email" />
                        <div class="error"></div>
                    </div>
                </div>
                <input asp-for="Password" value="@Model.Password" type="hidden" />
            </div>
            <div class="row">
                <div class="column">
                    <div class="Form-group input-control">
                        <label for="IsAdmin">Администраторски права</label>
                        <input type="checkbox" class="checked" asp-for="IsAdmin" value="true">
                        <div class="error"></div>
                    </div>
                </div>
            </div>
            <button type="submit" class="button">Добави</button>
            <a href="UserList">Назад</a>
        </form>
        <br />
    </div>
</body>
<script src="~/js/admin/ValidateUser.js"></script>
</html>