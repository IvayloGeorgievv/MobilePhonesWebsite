@model MobilePhonesWebsite.ViewModels.UserVM.RegisterUserVM
@{
    ViewBag.Title = "Регистрация на администратор";
    Layout = "/Views/Shared/_Layout.cshtml";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Form Validation</title>
    <link rel="stylesheet" href="~/css/user/register-form.css" type="text/css" runat="server">
</head>
<body>
    <div class="container" style="margin-bottom:5%">
        <form id="form" asp-action="RegisterPage" asp-controller="User" method="post">
            <input type="hidden" id="isUsernameValid" value="" />
            <input type="hidden" id="isEmailValid" value="" />
            <input type="hidden" id="isPasswordValid" value="" />
            <input type="hidden" id="isPassword2Valid" value="" />
            <h1>Регистрация на администратор</h1>
            <br />
            <div class="input-control">
                <label for="Username">Username</label>
                <input asp-for="Username" id="firstName" type="text">
                <div class="error"></div>
            </div>
            <div class="input-control">
                <label for="email">Email</label>
                <input asp-for="Email" id="email" type="text">
                <div class="error"></div>
            </div>
            <div class="input-control">
                <label for="password">Парола</label>
                <input asp-for="Password" id="password" type="password">
                <div class="error"></div>
            </div>
            <div class="input-control">
                <label for="password2">Повтори парола</label>
                <input id="password2" name="password2" type="password">
                <div class="error"></div>
            </div>
            <button type="submit" id="button">Регистрирай се</button>
            <div class="container signin">
                <p>Вече си регистриран? <a href="~/User/LoginPage">Вход</a></p>
            </div>
        </form>

    </div>

</body>
<script src="~/js/user/register-form.js"></script>
</html>