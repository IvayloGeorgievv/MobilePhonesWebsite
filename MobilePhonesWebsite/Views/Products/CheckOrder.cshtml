@model MobilePhonesWebsite.ViewModels.OrderVM.CheckOrderVM
@{
    ViewBag.Title = "Liked products";
    Layout = "/Views/Shared/_Layout.cshtml";
}
<!DOCTYPE html>
<html lang="en">

<head>
    <title>Electronics Mart - Ecommerce Category Bootstrap Responsive Web Template | Checkout </title>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
</head>

<body>
    <!-- banner-2 -->
    <div class="page-head_agile_info_w3l inner-checkout-page">
        <div class="container py-5">
            <h3 class="title-style text-white pt-5"><span>Преглед на поръчка №@Model.OrderNumber</span></h3>
            <ul class="w3_short pt-3 pb-5">
                <li>
                    <a href="~/Home/Index" class="text-white">Начало</a>
                    <i class="fa fa-angle-right mx-2 text-white" aria-hidden="true"></i>
                </li>
                <li class="text-light">Преглед на поръчка</li>
            </ul>
        </div>
    </div>
    <!-- //banner-2 -->
    <!-- page -->
    <div class="services-breadcrumb">
        <div class="agile_inner_breadcrumb">
        </div>
    </div>
    <!-- checkout page -->
    <div class="privacy py-5">
        <div class="container py-md-5 py-4">
            <div class="checkout-right">

                <div class="table-responsive">
                    <table class="timetable_sub">
                        <thead>
                            <tr>
                                <th>Снимка</th>
                                <th>Име на продукт</th>
                                <th>Закупена бройка</th>
                                <th>Цена</th>
                            </tr>
                        </thead>
                        <tbody>

                            @foreach (var item in Model.OrderItems)
                            {
                                <tr>
                                    <td class="invert-image">
                                        <a href="@Url.Action("SingleItemPage", "Products", new {productId = item.ProductId, type = item.ProductType })">
                                            <img src="@Url.Action("GetImageForCartAndLiked", "Products", new {productId = item.ProductId, type = item.ProductType })" alt=" " class="img-responsive">
                                        </a>
                                    </td>

                                    <td>
                                        @item.ProductName
                                    </td>

                                    <td>
                                        @item.Quantity
                                    </td>

                                    <td>
                                        @item.Price лв.
                                    </td>

                                </tr>
                            }
                        </tbody>
                    </table>

                </div>
                <div class="row">
                    <div class="column" style="display:block; margin-left:2%">
                        <p>Статус на поръчка: @Model.OrderStatus</p>
                        <p>Цена на поръчка: @Model.OrderPrice лв.</p>
                    </div>
                    <div class="column" style="margin-left:90%">
                        @if (Model.OrderStatus == MobilePhonesWebsite.Enumerators.OrderEnum.OrderStatusEnum.Предстояща)
                        {
                            <a class="btn btn-danger m-1" onclick="confirmCancelOrder(@Model.OrderId)"> Откажи </a>
                        }
                        <a href="/User/UserOrdersList" class="btn btn-style mt-3"> Назад </a>
                    </div>
                </div>


            </div>

        </div>
    </div>

</body>

</html>